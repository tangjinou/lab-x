<?xml version="1.0" encoding="utf-8"?>
<mx:Application xmlns:mx="http://www.adobe.com/2006/mxml" layout="absolute" creationComplete="callLater(init)" width="800" height="600" xmlns:labx="cn.edu.zju.labx.*" xmlns:local="*" >
	 <mx:Script>
	 	<![CDATA[
	 		import cn.edu.zju.labx.core.UserInputHandler;
	 		import cn.edu.zju.labx.core.StageObjectsManager;
	 	    import mx.core.UIComponent;
	 	    import flash.events.Event;
			import flash.events.MouseEvent;
	 		public function init():void{
	 		   initStage();
	 		   var uic:UIComponent = new UIComponent();
			   uic.addChild(test3DMaxtoPV3DApplication);
               addChild(uic);   
	 		} 
	 		public function initStage():void{
	 		   StageObjectsManager.getDefault.mainView=test3DMaxtoPV3DApplication;
	 		   stage.frameRate = 40;
//             stage.addEventListener(MouseEvent.MOUSE_DOWN,onMouseDownHandler);
//             stage.addEventListener(MouseEvent.MOUSE_MOVE,onMouseMoveHandler);
               stage.addEventListener(MouseEvent.MOUSE_UP,onMouseUpHandler); 
	 		   StageObjectsManager.getDefault.stage_width=stage.width; 
	 		   StageObjectsManager.getDefault.stage_height=stage.height; 
	 		   StageObjectsManager.getDefault.mainView.camera.zoom =90;
//	 		   StageObjectsManager.getDefault.mainView.camera.fov =30; 
	 		}
	 		public function onMouseDownHandler(event:MouseEvent):void{
	 		    UserInputHandler.getDefault.mouseDownHandler(event);
	 		}
	 		public function onMouseMoveHandler(event:MouseEvent):void{
	 		    UserInputHandler.getDefault.mouseDownHandler(event);
	 		}
	 		public function onMouseUpHandler(event:MouseEvent):void{
	 		    UserInputHandler.getDefault.mouseDownHandler(event);
	 		}
	 	]]> 
	 </mx:Script>
     
	  
	 <local:Test3DMaxtoPV3DApplication id="test3DMaxtoPV3DApplication" />
	  
     <mx:HBox x="560" y="0" width="100%">
     <mx:Button  label="zoom+" click="StageObjectsManager.getDefault.mainView.camera.zoom++" icon="@Embed('../resource/picture/zoom_add.png')"/>
     <mx:Button  label="zoom-" click="StageObjectsManager.getDefault.mainView.camera.zoom--" icon="@Embed('../resource/picture/zoom_min.png')"/>
     </mx:HBox>

</mx:Application>
