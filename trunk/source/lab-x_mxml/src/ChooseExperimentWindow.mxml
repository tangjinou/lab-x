<?xml version="1.0" encoding="utf-8"?>
<mx:TitleWindow xmlns:mx="http://www.adobe.com/2006/mxml"  
    title="实验选择"  showCloseButton="true" close="PopUpManager.removePopUp(this);" creationComplete="init()" borderAlpha="0.75" width="304" height="146">
	<mx:Script>
		<![CDATA[
			import mx.collections.ArrayCollection;
			import cn.edu.zju.labx.core.StageObjectsManager;
			import mx.managers.PopUpManager;
			private var rotate_stage_status:Boolean;
			
			[Bindable]
		    public static var exps:ArrayCollection = new ArrayCollection(
                [ {label:"实验一", data:1}, 
                  {label:"实验二", data:2}]);
			public function init():void{
			}
			public var experiment_id:int=1;
			public function selectHandler(event:Event):void{
			   experiment_id=ComboBox(event.target).selectedItem.data;
			}
			
		]]>
	</mx:Script>
          <mx:Label text="请选择实验" width="270" textAlign="center" fontWeight="bold" fontSize="12"/> 
          <mx:ComboBox dataProvider="{exps}"   color="0x000000" close="selectHandler(event);" fontSize="12" textAlign="center"/>
	      <mx:Button label="确定" id="confirm" textAlign="center"/>
    
</mx:TitleWindow>

